{
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
    "eslint.config.*",
    "scripts/**/*.ts"
  ],
  "compilerOptions": {
    "noEmit": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "types": ["node"],
    "target": "ES2022",
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": false
  }
}
